<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Packet Designer</title>

    <base href="~/">
    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/main.css" asp-append-version="true" />
</head>
<body ng-app="msIoT">
    <!-- header -->
    <div ng-controller="MenuCtrl as mn">
        <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" ng-click="mn.isNavCollapsed = !mn.isNavCollapsed">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a ui-sref="app.home" class="navbar-brand"><img class="logo-brand" src="~/images/whitegoods.svg" /> White Goods Data Packet Designer</a>
                </div>
                <div class="collapse navbar-collapse" uib-collapse="mn.isNavCollapsed">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </div>
    <!-- body -->
    <div class="container">
        <div id="content-box">
            <ui-view></ui-view>

        </div>
    </div>

    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>