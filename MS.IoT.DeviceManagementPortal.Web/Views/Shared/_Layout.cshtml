<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Management Portal</title>

    <base href="/">
    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/main.css" asp-append-version="true" />
</head>
<body ng-app="MSIoTDeviceManagementPortal">
    <!-- header -->
    <div ng-controller="MenuCtrl as mn">
        <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse fixed-top" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" ng-click="mn.isNavCollapsed = !mn.isNavCollapsed">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a ui-sref="app.listdashboard" class="navbar-brand" style="color:#267CB4"><img src="/images/dmp-logo.svg" /> Device Management Portal</a>
                    </div>
                    <div class="collapse navbar-collapse" uib-collapse="mn.isNavCollapsed">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <div style="position:absolute; left:0px; top:105px" ng-controller="SideMenuCtrl as sm">

        <a ui-sref="app.list">
            <div ng-class="{menu : true, active : sm.isListActivated}">
                <img class="center-block" src="~/images/tab-devices-selected.svg" />
            </div>
        </a>

        <a ui-sref="app.map">
            <div ng-class="{menu : true, active : sm.isMapActivated}">
                <img class="center-block" src="~/images/tab-map-selected.svg" />
            </div>
        </a>

        <a ui-sref="app.groups">
            <div ng-class="{menu : true, active : sm.isGroupsActivated}">
                <img class="center-block" src="~/images/tab-groups-selected.svg" />
            </div>
        </a>
    </div>

    <!-- body -->
    <div class="container">
        <div id="content-box">
            <ui-view></ui-view>
        </div>
    </div>

    @RenderBody()
    @RenderSection("scripts", required: false)
    <script src='https://www.bing.com/api/maps/mapcontrol'></script>
</body>
</html>